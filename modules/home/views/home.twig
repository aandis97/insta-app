{% extends 'layouts/insta-app.twig' %}

{% block title %}
Home
{% endblock %}

{% block header %}

{% endblock %}

{% block body %}
<div class="container posts-container">

{% for post in posts %}
  <div class="post-container">
    <div class="user-box clearfix">
      <div class="image">
        <img class="rounded-circle"
          src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw=="
          alt="Generic placeholder image" width="35" height="35">
      </div>
      <div class="username">
        <h6>@{{ post.user_username }}</h6>
      </div>
    </div>
    <img class="card-img-top" alt="Image {{ post.user_username }}" style="height: 500px; width: 100%; display: block;"
      src="{{ base_url('/img/posts/') }}{{ post.image }} " data-holder-rendered="true">
    <div class="" style="margin-top:10px; font-size: 17px">
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button style="background-color:transparent;border:none;" onclick="like(1)"><i
              class="far fa-heart"></i></button>
              <small>Liked by {{ post.total_likes }} people</small>
        </div>
        <small class="text-muted">{{ post.created_at }}</small>
        
      </div>
      <p class="card-text mt-3 px-2">{{ post.description }}</p>
      <div class="viewkomen1">
        <small class="text-muted">Komentar</small>
        <div class="row">
          <div class="col">
            <img src="http://localhost:8001/images/profile/default.png" alt="Profile Picture" width="25px"
              class="img-thumbnail rounded-circle">
            <small><b>admin</b></small>
            <small>coba</small>
          </div>
        </div>
      </div>
      <hr>
      <form action="" method="POST" class="formkomen">
        <input type="hidden" value="1" id="id1" name="id">
        <div class="row">
          <div class="col-11">
            <textarea style="border: none; outline:none" cols="107" rows="1" placeholder="Add a comment..."
              id="komentar1" name="komentar"></textarea>
            <div class="invalid-feedback errorKomentar1"></div>
          </div>
          <div class="col-1">
            <button type="submit" style="background-color:transparent;border:none;"><small style="color: blue;">Post</small></button>
          </div>
        </div>
      </form>
    </div>

  </div>
{% endfor %}

  
</div>
{% endblock %}


{% block scripts %}
	<script src="{{ base_url ('/js/modules/home/home.js')}}"></script>
{% endblock %}
