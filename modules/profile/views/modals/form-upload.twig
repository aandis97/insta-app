<div class="modal fade" id="addNewPost" tabindex="-1" role="dialog" aria-labelledby="addNewPostTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Add New Post</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-3">
                    <center>
                        <img class="img-thumbnail img-preview" width="100%" src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" alt="Generic placeholder image">
                    </center>
                </div>
                <div class="col-md-9">
                    <form id="form-upload" enctype='multipart/form-data'>
                        <div class="div-col-sm-9 mb-3">
                            <div class="custom-file">
                                <input type="file" class="form-control" id="image" name="image" onchange="previewImg()">
                                <div class="ml-1 invalid-feedback error-image"></div>
                            </div>
                            <small>
                                <p class="ml-2 mt-1 info">max 1 MB</p>
                            </small>
                        </div>
                        <div class="text-center">
                            <textarea rows="5" cols="50" class="form-control" id="description" name="description" placeholder="Write your description"></textarea>
                        </div>
                    </form>

                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary" id="btn-submit-post">Post</button>
        </div>
        </div>
    </div>
</div>