      <div class="col-md-8">
        <h4 class="fw-light">@{{ session.user.username ?? '-' }}</h4>
        <p class="lead text-muted">{{ session.user.name ?? '-' }}</p>
        <p>0 Post</p>
        <button style="background-color:transparent;border:none;color:blue"><i
            class="fas fa-plus"></i> Add New Post</button>
      </div>
      
      <div class="col-md-2">
        <a href="{{ base_url ('/auth/logout') }}" style="background-color:transparent;border:none;"><small style="color: blue;">Logout</small></button>
      </div>
    </div>
    <hr>
    
      <div class="row" style="padding:18px 0px">
          <div class="col-md-4">
              <button style="background-color:transparent;border:none;"><img class="img-thumbnail"></button>
          </div>
          <div class="col-md-4">
